    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "task g++",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "${workspaceFolder}\\*.c",
                "-o",
                "${workspaceFolder}\\${workspaceRootFolderName}.exe",
                "-I",
                "Z:\\jjssz_code\\code_cpp\\demo01",
                "-std=c++17"
            ],
            "options": {
                "cwd": "C:\\mingw64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
